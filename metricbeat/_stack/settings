#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/elastic/metricbeat"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_metricbeat"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_metricbeat"
export VCW_STACK_GLOBAL_VOLUME_LIST="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_config,\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_config:/vcw/pwd"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_METRICBEAT_ENVIRONMENT,\
$VCW_STACK_METRICBEAT_COMMAND,\
$VCW_STACK_METRICBEAT_PORTS,\
$VCW_STACK_METRICBEAT_VOLUMES,\
$VCW_STACK_METRICBEAT_NETWORKS,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="metricbeat"
export VCW_STACK_GLOBAL_IMAGE_NAME="vcwc/elastic.metricbeat"
export VCW_STACK_METRICBEAT_ENVIRONMENT="'ES_METRICBEAT_LOGGING_LEVEL=${DOLLAR}{VCW_STACK_METRICBEAT_MODULE_METRICBEAT_LOGGING_LEVEL}'"
export VCW_STACK_METRICBEAT_VOLUMES="\
'/etc:/hostfs/etc:ro',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_config:/vcw/pwd',\
'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_volume:/usr/share/metricbeat/data'"
export VCW_STACK_METRICBEAT_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_GLOBAL_VOLUMES="\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_config: { external: true },\
${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_metricbeat_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export VCW_STACK_METRICBEAT_MODULE_METRICBEAT_LOGGING_LEVEL="warning"
export VCW_STACK_METRICBEAT_DEPLOY_MODE="replicated"
export VCW_STACK_METRICBEAT_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_METRICBEAT_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
