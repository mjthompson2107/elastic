#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/elastic/metricbeat/node"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_metrics_node"
export VCW_STACK_GLOBAL_BOOTSTACKS=""
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_metrics_node"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_STACKPREFIX}_metrics_node_volume"
export VCW_STACK_GLOBAL_VOLUME_INITIALISED=""
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_METRICS_NODE_ENVIRONMENT,\
$VCW_STACK_METRICS_NODE_COMMAND,\
$VCW_STACK_METRICS_NODE_PORTS,\
$VCW_STACK_METRICS_NODE_VOLUMES,\
$VCW_STACK_METRICS_NODE_NETWORKS,\
$VCW_STACK_METRICS_NODE_DEPLOY_MODE,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS'
export VCW_STACK_GLOBAL_SERVICE_NAME="metricbeat"
export VCW_STACK_GLOBAL_IMAGE_NAME="vcwc/elastic.metricbeat.node"
export VCW_STACK_METRICS_NODE_ENVIRONMENT="\
'ES_METRICBEAT_OUTPUT_CONSOLE=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONSOLE}',\
'ES_METRICBEAT_OUTPUT_ELASTICSEARCH=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH}',\
'ES_METRICBEAT_OUTPUT_KAFKA=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_KAFKA}',\
'ES_METRICBEAT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KIBANA_HOST=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KIBANA_DASHBOARDS=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KAFKA_HOSTS=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS}',\
'ES_METRICBEAT_OUTPUT_CONFIG_KAFKA_TOPIC=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC}',\
'ES_METRICBEAT_LOGGING_LEVEL=${DOLLAR}{VCW_STACK_METRICS_NODE_ENVIRONMENT_LOGGING_LEVEL}'"
export VCW_STACK_METRICS_NODE_VOLUMES="\
'/etc:/hostfs/etc:ro',\
'/var/run/docker.sock:/var/run/docker.sock:ro',\
'/proc:/hostfs/proc:ro',\
'${DOLLAR}{VCW_STACK_STACKPREFIX}_metrics_node_volume:/usr/share/metricbeat/data'"
export VCW_STACK_METRICS_NODE_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay"
export VCW_STACK_METRICS_NODE_DEPLOY_MODE="global"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_STACKPREFIX}_metrics_node_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_NETWORKLOCAL}_overlay: { external: true }"
# END GLOBAL SETTINGS

# START SETTINGS metricbeat.base
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONSOLE="false"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_ELASTICSEARCH="false"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_KAFKA="false"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_ELASTICSEARCH_HOSTS="elasticsearch:9200"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_HOST="kibana:5601"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KIBANA_DASHBOARDS="false"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_HOSTS="kafka:9092"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_OUTPUT_CONFIG_KAFKA_TOPIC="test"
export VCW_STACK_METRICS_NODE_ENVIRONMENT_LOGGING_LEVEL="warning"
export VCW_STACK_METRICS_NODE_DEPLOY_RESOURCES_LIMITS_MEMORY="64m"
export VCW_STACK_METRICS_NODE_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="8m"
# END SETTINGS metricbeat.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
